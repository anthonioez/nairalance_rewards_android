<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/mainLayout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/layoutRow"
        android:layout_width="match_parent"
        android:layout_height="@dimen/earning_height"
        android:background="?attr/selectableItemBackground"
        android:orientation="horizontal"
        android:padding="10dp">

        <FrameLayout
            android:id="@+id/layoutFrame"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:paddingLeft="10dp" android:paddingRight="10dp">

            <ImageView
                android:id="@+id/imageThumb"
                style="@style/avatarThumb"
                android:background="@color/transparent"
                android:padding="0dp"
                android:scaleType="centerInside"
                android:src="@mipmap/ic_launcher"/>

            <!--
            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/imageThumb"
                style="@style/avatarThumb"
                android:background="@color/transparent"
                android:padding="0dp"
                android:src="@mipmap/ic_launcher"/>
                -->

        </FrameLayout>
        <LinearLayout
            android:id="@+id/layoutText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="vertical"
            android:padding="5dp">

            <TextView
                android:id="@+id/textTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:lines="1"
                android:text="Total"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:textStyle="normal"/>

            <TextView
                android:id="@+id/textAction"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:alpha="0.75"
                android:lines="1"
                android:text="Action"
                android:textColor="@color/white"
                android:textSize="12sp"/>
        </LinearLayout>

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="@dimen/badge_earning_height"
            android:layout_gravity="center"
            android:background="@drawable/badge_earning"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:text="0"
                android:textColor="@color/white"
                android:textSize="14sp"/>
        </FrameLayout>

    </LinearLayout>

    <View
        android:id="@+id/greyLine"
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="@dimen/divider_margin"
        android:layout_marginRight="@dimen/divider_margin"
        android:background="@color/divider"/>

    <LinearLayout
        android:id="@+id/layoutPad"
        android:layout_width="match_parent"
        android:layout_height="@dimen/earning_height"
        android:orientation="horizontal"
        android:padding="10dp"
        android:visibility="gone">
    </LinearLayout>

</LinearLayout>

