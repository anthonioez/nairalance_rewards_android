<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/mainLayout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?attr/selectableItemBackground"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/layoutRow"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="80dp"
        android:orientation="horizontal"
        android:padding="5dp">


        <FrameLayout
            android:id="@+id/layoutFrame"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:padding="5dp">

            <ImageView
                android:id="@+id/imageHolder"
                android:layout_width="@dimen/reward_image_height"
                android:layout_height="@dimen/reward_image_height"
                android:layout_gravity="center"
                android:gravity="center"
                android:src="@mipmap/ic_launcher"/>


            <ImageView
                android:id="@+id/imageLogo"
                android:layout_width="@dimen/reward_image_height"
                android:layout_height="@dimen/reward_image_height"
                android:layout_gravity="center"
                android:gravity="center"
                android:src="@mipmap/ic_launcher"
                android:visibility="gone"/>

        </FrameLayout>

        <LinearLayout
            android:id="@+id/layoutText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="vertical"
            android:padding="5dp">

            <TextView
                android:id="@+id/textTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:lines="1"
                android:text="Title"
                android:textColor="@color/title"
                android:textSize="16sp"
                android:textStyle="normal"/>

            <TextView
                android:id="@+id/textDesc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Info"
                android:textColor="@color/detail"
                android:textSize="12sp"
                android:textStyle="normal"/>

        </LinearLayout>

    </LinearLayout>

    <View
        android:id="@+id/greyLine"
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="@dimen/divider_margin"
        android:layout_marginRight="@dimen/divider_margin"
        android:background="@color/divider_dark"/>

</LinearLayout>

